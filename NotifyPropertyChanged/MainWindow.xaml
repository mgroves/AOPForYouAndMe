<Window x:Class="NotifyPropertyChanged.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="161" Width="541">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label Content="First Name:" Width="117" FontSize="20" FontWeight="Bold" />
            <TextBox Width="200" Text="{Binding Path=FirstName, UpdateSourceTrigger=PropertyChanged}" FontSize="20"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Last Name:" Width="117" FontSize="20" FontWeight="Bold" />
            <TextBox Width="200" Text="{Binding Path=LastName, UpdateSourceTrigger=PropertyChanged}" FontSize="20"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Full Name:" Width="118" FontSize="20" FontWeight="Bold" />
            <Label Width="413" Content="{Binding Path=FullName}" FontSize="20" />
        </StackPanel>
    </StackPanel>
</Window>
